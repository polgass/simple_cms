<% @page_title = "Editors" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class="editors index">
  <h2>Editors</h2>

  <%= link_to(image_tag('plus_sign.png', :size => '11x11', :alt => '+') + " Add New Editor", {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@editors.size, 'editor') %> found</div>
  <table class="listing" summary="Editor list">
    <tr class="header">
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @editors.each do |editor| %>
    <tr class="<%= cycle('odd', 'even') %>"></td>
      <td><%= editor.username %></td>
      <td><%= editor.name %></td>
      <td><%= mail_to(editor.email) %></td>
      <td class="actions">
        <%= link_to("Edit", {:action => 'edit', :id => editor.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => editor.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
